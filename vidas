#include <stdio.h>
#include "temporizador.h"
#include "rana.h"
void vidas (){ //sistema de vidas
    int vida=3;
    while (vida!=0)
    {
    
    if (muerte() == true) //cuando la rana muere por una colision pierde una vida
    {vida--;}

    if (tiemporestante()==0) //cuando el timer llega a 0 perdes una vida
    {vida--;}

    printf ("VIDAS: %d", vida); //muestra cuantas vidas le quedan
    }
}
